<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10.0dip"
    android:paddingTop="10.0dip">

    <com.vipapp.appmark2.widget.TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:textColor="#ff000000"
        android:textSize="18.0sp" />

    <com.vipapp.appmark2.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:default_view="@layout/string_multiple_chooser_default"
        app:holder="StringMultipleChooserHolder"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:menuClass="StringMultipleChooserMenu" />

    <com.vipapp.appmark2.widget.TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/less_round_blue"
        android:paddingBottom="7.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="7.0dip"
        android:text="@android:string/ok"
        android:textColor="#ffffffff"
        android:textSize="14.0sp" />
</LinearLayout>
